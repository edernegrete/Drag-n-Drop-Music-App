@import 'style.css'
naranja = #dd4f24
negro = #151515
a
	color black
	text-decoration none
body
	background #ccc
	font-family Helvetica
	font-size 16px
figure
	width 70%
img
	width 100%
.drop_section
	background white
	border 1px dashed #008FD5
	font-size 1.2em
	margin-bottom 1em
	margin-left 1.5em
	margin-right 1.5em
	padding 5em
	position relative
.dragover
		border 4px dashed #FCD27F
		font-size 1.4em
.recent_button
	background naranja
	box-shadow 1px 1px 10px negro
	color white
	margin-left .5em
	padding .5em
	text-shadow 1px 1px 10px negro
	&:active
		box-shadow 1px 1px 10px negro inset
.recent_drags
	display none
	.song
		margin-right 1em
		p
			display inline-block
			width 40%
		.img_recent
			display inline-block
			vertical-align middle
			width 150px
.social
	background negro
	margin-left 0
	position absolute
	top 0
	right 0
	.list
		padding 0
		margin 0
		li
			color naranja
			display inline-block
			padding 2px
		.mail
			background rgba(negro,0.7)
			bottom -2em
			color white
			opacity 0
			position absolute
			right 10px
			&:before
				border-bottom 10px solid naranja
				border-left 10px solid transparent
				border-right 10px solid transparent
				content ''
				position absolute
				right 0
				top -10px
//oocss
.center
	margin 0 auto
.margin_top
	margin-top 1em
.text_center
	text-align center
.transition
	transition 1s all ease
@media screen and (min-width:1000px)
	figure
		width 50%
	.artist
		.img_container
			float left
	.album
		margin-left 10em
	.vidletra
		width 47%
		margin-left 1em
	.vidletra
	.album
		display inline-block
		vertical-align top
	.recent_drags
		.song
			display inline-block
			p
				display block
				width 100%
	.social
		right 3em